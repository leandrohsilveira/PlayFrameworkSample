# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()

POST 	/usuario/salvar					controllers.Application.salvar()
GET     /ajax/usuario/editar/:id    	controllers.Application.editar(id :Long)
DELETE	/ajax/usuario/remover/:id		controllers.Application.remover(id :Long)
GET		/ajax/usuarios/:itens/:pagina	controllers.Application.listar(pagina :Integer, itens :Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/javascripts/routes  	controllers.Application.javascriptRoutes()
GET     /assets/*file               	controllers.Assets.at(path="/public", file)
