# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET		/p/:pagina					controllers.Application.usuarios(pagina: Integer)
POST 	/usuario/salvar				controllers.Application.salvar()
POST	/usuario/acao				controllers.Application.acao()

POST	/usuario/remover/:id		controllers.Application.remover(id :Long)
POST	/usuario/editar/:id			controllers.Application.editar(id :Long)
POST    /ajax/usuario/editar/:id    controllers.Application.ajaxEditar(id :Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/javascripts/routes  controllers.Application.javascriptRoutes()
GET     /assets/*file               controllers.Assets.at(path="/public", file)
